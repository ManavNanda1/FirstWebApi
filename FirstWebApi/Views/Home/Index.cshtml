<div class="text-center">
    <h1> We Gonna fetch Api Data Below We Created</h1>
</div>

<div class="text-center">
    <button type="button" class="btn btn-success" id="GetData">Get Api Data</button>
    <button type="button" class="btn btn-danger" id="ClearData">Clear</button>
    
</div>

<div class="text-center">
    <h2>Get value By Id</h2>
    <input type="number" id="InputVal" class="form-control" />
    <button type="button" id="FetchIndexData">Get Searched Data</button>
</div>

<div class=" text-center" id="ApiData">

</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script>
    $(document).ready(() => {
        $("#GetData").on('click', function () {
            $.getJSON('/api/FirstApi', function (response) {
                $.each(response, function (key, value) {
                    let Data = "<h3>" + value + "</h3>"
                    $(Data).appendTo("#ApiData");
                })
            })
        })

        $("#ClearData").on("click", function () {
            $("#ApiData").empty();
        })

        $("#FetchIndexData").on("click", function () {
            let id = $("#InputVal").val();
            $.getJSON('http://localhost:49879/api/FirstApi/' + id, function (res) {
                let val = "<h2>" + res + "</h2>";
                $(val).appendTo("#ApiData");
            })

        })       
    })
</script>